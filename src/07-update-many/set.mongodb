// Rename: Cambiamos el nombre del atributo m√°s no el contenido

db.zips.updateMany(
    // query
    {city: "CLEVELAND"},
    // update - operators
    {
        $rename:{
            myAttr: "my_data"
        }
    }
)


// unset: En caso de que queramos eliminar un atributo

db.zips.updateMany(
    // query
    {city: "CLEVELAND"},
    // update - operators
    {
        $unset:{
            my_data: ""
        }
    }
)
